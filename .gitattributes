# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Force specific file types to use LF
*.js text eol=lf
*.ts text eol=lf
*.svelte text eol=lf
*.css text eol=lf
*.html text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.xml text eol=lf
*.svg text eol=lf

# Config files
*.config.js text eol=lf
*.config.ts text eol=lf
.editorconfig text eol=lf
.gitattributes text eol=lf
.gitignore text eol=lf
.prettierrc text eol=lf

# Shell scripts (must use LF)
*.sh text eol=lf

# Windows batch files (must use CRLF)
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files (do not modify)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary
*.zip binary
*.tar.gz binary
*.pdf binary
